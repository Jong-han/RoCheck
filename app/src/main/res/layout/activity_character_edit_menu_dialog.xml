<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_cm_dialog"
        android:paddingVertical="15dp">


        <TextView
            android:id="@+id/btn_update_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/cm_ripple_bound"
            android:padding="15dp"
            android:text="@string/character_dialog_change_level"
            android:textSize="@dimen/primary_text_size"
            android:textColor="@color/primary_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_delete_character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:padding="15dp"
            android:background="@drawable/cm_ripple_bound"
            android:text="@string/character_dialog_delete"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:textSize="@dimen/primary_text_size"/>

    </LinearLayout>
</layout>